<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lineardialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textMed"
        android:text="Qual foi a nota tirada?"
        android:textColor="@color/textColorMain"
        />

    <com.warkiz.widget.IndicatorStayLayout
        android:id="@+id/seekbarnotaAtividadeTirada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        >
        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekbarNotaTirada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isb_indicator_color="@color/colorSecondary"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="@dimen/textMin"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_only_thumb_draggable="true"
            app:isb_progress="0"
            app:isb_thumb_adjust_auto="true"
            app:isb_thumb_color="@color/colorSecondary"
            app:isb_tick_texts_color="@color/colorSecondary"
            app:isb_tick_texts_size="@dimen/textMed"
            app:isb_track_background_color="@color/colorSecondaryLight"

            app:isb_track_background_size="1dp"
            app:isb_track_progress_color="@color/coloracima"
            app:isb_track_progress_size="2dp"
            app:isb_seek_smoothly="true"
            app:isb_tick_marks_swept_hide="true"
            app:isb_tick_marks_size = "13dp"
            />
    </com.warkiz.widget.IndicatorStayLayout>

    <TextView
        android:id="@+id/completar_atividade_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CONFIRMAR"
        android:textColor="@color/colorSecondaryLight"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/textMin"
        />
<TextView
    android:id="@+id/nota_tirada"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0.0"
    android:textColor="@color/white"
    android:textSize="@dimen/textMin"
    android:layout_margin="2dp"

    />
</LinearLayout>